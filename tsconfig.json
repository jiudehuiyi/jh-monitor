{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "pretty": true,
      "rootDir": "src",
      "sourceMap": true,
      "strict": false,
      "esModuleInterop": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noImplicitAny": false,
      "noFallthroughCasesInSwitch": true,
      "outDir": "dist",
      "lib": ["es2019", "dom"],
      "importHelpers": true,
      "resolveJsonModule": true,
    },
    "exclude": ["node_modules", "test", "dist"]
  }
